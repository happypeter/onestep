<% content_for :template_js do %>
  <script>
    $('#course_desc').NobleCount('#desc_count',{
      on_negative: 'go_red',
      on_positive: 'go_green',
      max_chars: 33});
  </script>
<% end %>
<%= form_for(@course, :url => "/course") do |f| %>
  <%= f.hidden_field :user_id %>
  <%= f.hidden_field :name %>
  <%= flash[:notice] %>
  <% if @course.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@course.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
      <% @course.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <dl class="field">
    <dt> <%= f.label :price %> </dt>
    <dd> <%= f.text_field :price %> </dd>
  </dl>
  <dl class="field">
    <dt> <%= f.label :title %> </dt>
    <dd> <%= f.text_field :title %> </dd>
  </dl>
  <dl class="field">
    <dt>
      <%= f.label :description %>
      (<%= t('remaining') %><span id='desc_count'></span> <%= t('characters') %>)
    </dt>
    <dd>
      <%= f.text_area :description, :size => "14x4", :id => "course_desc" %>
    </dd>
  </dl>
  <div class="field">
    <%= f.check_box :public %>
    <%= f.label t('public') %>
  </div>
  <div>
    <%= f.submit t('update_course'), :class => "minibutton primary" %>
    <%= link_to t('go_back'), @course, :class => "minibutton" %>
  </div>
<% end %>

