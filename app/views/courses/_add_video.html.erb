<% content_for :template_js do %>
  <%= javascript_include_tag 'i_fileupload'%>
  <script>
    jQuery(function($) {
      var _tip = $("#upload-tip");
      $('#fileupload').fileupload({
          formData: {course_id: <%= course.id %>},
          dataType: 'script',
          url: '/videos.js',
          add: function(e, data){
            types = /(\.|\/)(mov|mp4)$/i;
            file = data.files[0];
            if (types.test(file.type) || types.test(file.name))
            {
              if(file.size > 500000000){
                alert("Max filesize 50M!");
              }
              else {
                $('#filesize').html("Filesize:" + "<span class='number'>" + (file.size/(1024*1024)).toFixed(2) + "</span>" + "M");
                data.submit();
              }
            }
            else
            {
              alert(file.name + " is not a mov or mp4 file");
            }
          },
          start: function(e) {
            var filesize = parseFloat($('#filesize .number').text()); // in M.
            var step = 2;
            var progress = step;
            var timeForOneM = 10000;
            var timeDalay = 2000;
            var changeProgress = function(){
              progress = progress + step;
              $('.bar').css('width', progress + '%');
            }
            $('a').bind('click', false);
            var intId = setInterval(changeProgress, (timeForOneM*filesize)/(100/step));
            var uploadDone = function(){
              clearInterval(intId);
              var changeTip = function() {
                _tip.html('Porcessing&nbsp;&middot;&middot;&middot;');
                $('.upload').append("<h3>Processing....Plz Wait!</h3>");
              }
              setTimeout(changeTip, timeDalay);
            }
            setTimeout(uploadDone, timeForOneM*filesize);//5000 is the time consumed to upload 1M data.
            _tip.html('Uploading&nbsp;&middot;&middot;&middot;');
          },
          done: function (e, data) {
            _tip.html("Upload done!");
             $('.upload h3').text('Process Done!');
            $('a').unbind('click', false);
          },
      });
    });
  </script>
<% end %>


<div class="add-video-box">
  <div class="secondary-info">
    <h1 id="upload-new-video"> <%= t('upload_new_video') %> </h1>
    <div id="filesize">
      <%= t('note_max_video_size_50m') %>
    </div>
    <a class= "fileupload-btn button">
      <span id="upload-tip"><%= t('click_to_upload_a_video') %></span>
      <input id="fileupload" name="video[asset]" type="file">
    </a>
    <div class="upload">
      <div class="progress">
        <div class="bar">
        </div>
      </div>
    </div>
  </div>

  <div class="primary-info">
    <h1><%= t('enter_video_info') %></h1>
    <%= form_for(Video.new) do |f| %>
      <br>
      <%= f.label t("video_title") %>
      <br>
      <%= f.text_field :title %>
      <br>
      <%= f.label t("video_desc") %>
      <br>
      <%= f.text_field :desc %>
      <br>
      <br>
      <%= f.submit t('confirm_to_upload_the_video'), :class => "minibutton", :disabled => true,  data: {disable_with: "submitting"},:id => "submit_video_info" %>
    <% end %>
  </div>
</div>
