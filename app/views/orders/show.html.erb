<div class="container">
  <div class="order-container">
    <h3 class="order-title"> 订单详情 </h3>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>名称</th> <!-- Subject -->
          <th>价格</th>
          <th>数量</th>
          <th>合计</th>
          <th><%= t('out_trade_no') %></th>
          <th>付款时间</th>
          <th>订单状态</th>
        </tr>
      </thead>
      <tbody>
        <% if @order.present? %>
          <tr>
            <td><%= @subject %></td>
            <td>￥<%= @price %></td>
            <td>1</td>
            <td>￥<%= @total_fee %></td>
            <td><%= @order.out_trade_no %></td>
            <td><%= @notify_time %></td>
            <td><%= @trade_status %></td>
          </tr>
        <% else %>
          <tr>
            <td colspan="7"> 没有已付款记录 </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <% if @order.present? %>
    <%= link_to t("go_back"), course_path(@course), class: "button primary" %>
  <% end %>
</div>
