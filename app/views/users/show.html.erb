<%= content_for :template_js do %>
  <script>
    jQuery(function($) {
      $('img#avatar').tooltip();
    });
  </script>
<% end %>
<div id="user-show" class="container">
  <ul>
    <li id="user-info">
    <div class="avatared">
      <% if current_user == @user %>
        <a href="/account" title="click to change a new avatar">
        <% end %>
        <%= image_tag @user.final_avatar_url,:alt => "Your Image", :size => "210x210", :id => "avatar" %>
        <%= link_to t('edit_profile'), account_path, :class => "button" %>
        <% if current_user == @user %>
        </a>
      <% end %>
    </div>
    <h1>
      <span><%= @user.name %></span>
      <em><%= @user.email %></em>
    </h1>
    </li><!--end user-info -->
    <li id="user-course">
    <div class="user-course-header">
      <h2><%= t('my_courses') %>:</h2>
      <% if current_user == @user %>
        <%= link_to t('create_course'), create_course_path, :class => "button" %>
      <% end %>
    </div>
    <% if @user.courses.present? %>
      <div class="courses">
        <% @user.courses.each do |course| %>
          <% if course.public? || current_user == @user %>
            <%= render "courses/course", :course => course %>
          <% end %>
        <% end %>
      </div>
    <% else %>
      <p><%= t('no_courses_found') %></p>
    <% end %>
    </li><!--end user-course -->
  </ul>
</div><!-- user-show -->
