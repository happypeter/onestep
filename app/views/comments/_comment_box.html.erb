<div class="comment">
  <div id="comment_box">
    <%= form_for(Comment.new(:video_id => @video.id, :user_id => current_user.id), :remote => true) do |f| %>
      <%= f.hidden_field :video_id %>
      <%= f.hidden_field :user_id  %>
      <%= f.text_area :content %>
      <br>
      <%= f.submit "#{t('publish_comment')}", :class => "btn btn-success", :id => "comment_btn" %>
    <% end %>
  </div>
</div>

