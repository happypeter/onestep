<div class="container">

  <div class="marketing">

    <hr class="soften">

    <% if !@recent_courses.empty? %>
      <div class="suggested-actions">
        <% @recent_courses.each do |course| %>
          <%= render "courses/course", :course => course %>
        <% end %>
      </div>
    <% else %>
      <p>
      No Courses found
      </p>
    <% end %>
  </div>

</div>

