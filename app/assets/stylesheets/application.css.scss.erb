.brand {
  a {
    color: black;
    font-weight: bold;
    font-size: 25px;
    &:hover {
      color: $link-green;
      text-decoration: none;
    }
  }
}
.mini-player {
  video#videojs {
    display: block;
    width:446px;
  }
}
.masthead {
  padding: 200px 0 80px;
  background: url(<%= asset_path 'imac.jpg' %>) center no-repeat;
  position: relative;
  height: 400px;
  background-color: rgb(250, 250, 250);
  border-bottom: 1px solid rgb(229, 229, 229);
  .mini-player {
    position: absolute;
    top: 50%;
    margin-top: -252px;
    width: 446px;
    margin-left: -417px;
    left: 50%;
    video#videojs {
      display: block;
      width:446px;
    }
  }
  .home-signup {
    position: absolute;
    top: 50%;
    left: 50%;
    margin-top: -232px;
    margin-left: 90px;
    .action {
      margin-top: 30px;
    }
    .btn {
      width: 100%;
      padding: 19px 24px;
      font-size: 24px;
      font-weight: 200;
      color: white;
      border: 0;
      -webkit-border-radius: 6px;
      -moz-border-radius: 6px;
      border-radius: 6px;
      -webkit-box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.1),0 1px 5px rgba(0, 0, 0, 0.25);
      -moz-box-shadow: inset 0 1px 0 rgba(255,255,255,0.1),0 1px 5px rgba(0,0,0,0.25);
      box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.1),0 1px 5px rgba(0, 0, 0, 0.25);
      -webkit-transition: none;
      -moz-transition: none;
      transition: none;
    }
  }
  dl.form {
    margin: 0 0 10px;
    position: relative;
    dd {
      margin: 0;
      padding: 0;
      border: 0;
    }
  }
  dl.form dd input {
    padding: 9px;
    font-size: 16px;
    border-radius: 5px;
  }
}
ul {
  padding-left: 0px;
}
body {
  position: relative;
  @include chinese-style;
  font-size: 20px;
}

body > .navbar {
  font-size: 18px;
}

/* Faded out hr */
hr.soften {
  height: 1px;
  margin: 70px 0;
  background-image: -webkit-linear-gradient(left, rgba(0,0,0,0), rgba(0,0,0,.1), rgba(0,0,0,0));
  background-image:    -moz-linear-gradient(left, rgba(0,0,0,0), rgba(0,0,0,.1), rgba(0,0,0,0));
  background-image:     -ms-linear-gradient(left, rgba(0,0,0,0), rgba(0,0,0,.1), rgba(0,0,0,0));
  background-image:      -o-linear-gradient(left, rgba(0,0,0,0), rgba(0,0,0,.1), rgba(0,0,0,0));
  border: 0;
}

/* Faded out hr for small top&bottom margin */
hr.small_soften {
  height: 1px;
  margin: 2em 0;
  background-image: -webkit-linear-gradient(left, rgba(0,0,0,0), rgba(0,0,0,.1), rgba(0,0,0,0));
  background-image:    -moz-linear-gradient(left, rgba(0,0,0,0), rgba(0,0,0,.1), rgba(0,0,0,0));
  background-image:     -ms-linear-gradient(left, rgba(0,0,0,0), rgba(0,0,0,.1), rgba(0,0,0,0));
  background-image:      -o-linear-gradient(left, rgba(0,0,0,0), rgba(0,0,0,.1), rgba(0,0,0,0));
  border: 0;
}

/* sticky footer */
html,body {
  margin:0;
  border:0;
  height:100%;
}
#wrapper {
  min-height:100%;
  height:auto!important;
  height:100%;
  margin:0;
  margin-bottom:-160px;
  #footer-push {
    height:160px;
    clear:both;
  }
}
.footer {
  font-size: 18px;
  line-height: 1.5;
  color: rgb(119, 119, 119);
  text-shadow: 0 1px 0 white;
  .container {
    border-top: 1px solid rgb(229, 229, 229);
    padding: 30px 0px;
    .footer-divider {
      margin: 0 0 20px;
      border: 0;
      border-top: 1px solid rgb(238, 238, 238);
    }
  }
   min-height: 160px;
   clear:both;
  .footer-links {
    margin: 10px 0;
  }
  .footer_nav {
    dt {
      color: rgb(82, 89, 93);
      font-weight: bold;
    }
    dd {
      margin-left: 0;
    }
    width: 20%;
    float: left;
    margin-bottom: 20px;
  }
}

/* fileupload widget */

.fileupload-btn {
  position: relative;

  input#fileupload {
    position: absolute;
    top: 0;
    right: 0;
    opacity: 0;
    font-size: 23px;
    direction: ltr;
    cursor: pointer;

  }
}

a.action_label {
  border: 1px solid #CCC;
  border-top-left-radius: 6px;
  border-top-right-radius: 6px;
  padding: 5px 8px 2px;
  color: #666;
  border-bottom: none;
  text-decoration: none;
  &:hover {
    background-color: #ccc;
    color: #333;
  }
}


.btn-hpcasts {
  background-image: -webkit-linear-gradient(top, #509D5A, #31813B);
  text-shadow: 0 0 0 rgba(0, 0, 0, 0.25);
  color: white;
}

.btn-hpcasts:hover {
  background-color: #000000;
}

a {
  color: $link-green;
  &:hover {
    color: $link-green;
    text-decoration: underline;
  }
}
