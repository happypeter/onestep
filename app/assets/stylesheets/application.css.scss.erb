@import "vendor/bootstrap";
@import "global";
@import "comment";
@import "course";
@import "blog"; //â˜ƒ
@import "info";

.masthead {
  background: url(<%= asset_path 'hero.jpg' %>) center -10px no-repeat;
}
ul {
  padding-left: 0px;
}
body {
  position: relative;
  padding-top: 40px;
  background-color: $light-gray;
}

body > .navbar {
  font-size: 18px;
}

/* Faded out hr */
hr.soften {
  height: 1px;
  margin: 70px 0;
  background-image: -webkit-linear-gradient(left, rgba(0,0,0,0), rgba(0,0,0,.1), rgba(0,0,0,0));
  background-image:    -moz-linear-gradient(left, rgba(0,0,0,0), rgba(0,0,0,.1), rgba(0,0,0,0));
  background-image:     -ms-linear-gradient(left, rgba(0,0,0,0), rgba(0,0,0,.1), rgba(0,0,0,0));
  background-image:      -o-linear-gradient(left, rgba(0,0,0,0), rgba(0,0,0,.1), rgba(0,0,0,0));
  border: 0;
}


/* sticky footer */
html,body {
  margin:0;
  border:0;
  height:100%;
}
#wrapper {
  min-height:100%;
  height:auto!important;
  height:100%;
  margin:0;
  margin-bottom:-160px;
  #footer-push {
    height:160px;
    clear:both;
  }
}
.footer {
   background-color: #252525;
   min-height: 160px;
   clear:both;
   color: white;
   a {
     color: white;
   }
  p {
    margin-bottom: 0;
    color: #777;
  }
  .footer-links {
    margin: 10px 0;
  }
  .footer-links li {
    display: inline;
    padding: 0 2px;
  }
  .footer-links li:first-child {
    padding-left: 0;
  }
}

/* fileupload widget */

.fileupload-btn {
  position: relative;

  input#fileupload {
    position: absolute;
    top: 0;
    right: 0;
    opacity: 0;
    font-size: 23px;
    direction: ltr;
    cursor: pointer;

  }
}

a.action_label {
  border: 1px solid #CCC;
  border-top-left-radius: 6px;
  border-top-right-radius: 6px;
  padding: 5px 8px 2px;
  color: #666;
  border-bottom: none;
  text-decoration: none;
}

a.action_label:hover {
  background-color: #ccc;
  color: #333;
}

.btn-hpcasts {
  background-image: -webkit-linear-gradient(top, #509D5A, #31813B);
  text-shadow: 0 0 0 rgba(0, 0, 0, 0.25);
  color: white;
}

.btn-hpcasts:hover {
  background-color: #000000;
}
