@import "globals/variables";
@import "globals/mixins";

.masthead {
  padding: 80px 0;
  text-shadow: 0 1px 3px #222;
  background: #1F4044 url(<%= asset_path 'bg_masthead.png' %>) center repeat;
  .tagline {
    display: inline-block;
    .heading {
      margin-top: 0;
      padding-top: 10px;
      font-size: 70px;
      font-weight: normal;
      line-height: 1;
      color: #fff;
      letter-spacing: -1px;
    }
    .subheading {
      margin: 10px 0 0;
      font-size: 21px;
      line-height: 1.5;
      color: #fff;
    }
  }
  .home-signup {
    display: inline-block;
    float: right;
    .button {
      padding: 11px;
    }
    .text-muted {
      color: #999;
    }

    dl.form {
      margin: 0 0 10px;
      position: relative;
      dd {
        margin: 0;
        padding: 0;
        border: 0;
        input {
          padding: 9px;
          font-size: 16px;
          border-radius: 5px;
        }
      }
    }
    .button, dl.form input[type="text"], input[type="password"] {
      padding: 10px;
      font-size: 18px;
      border-radius: 5px;
    }
  }
}


